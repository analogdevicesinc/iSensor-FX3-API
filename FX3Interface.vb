#Region "Connection Functions"

    ''' <summary>
    ''' This function detects FX3 boards connected to the system, connects to the first available board, and then flashes the board with the provided firmware
    ''' </summary>
    Public Sub Connect()

        'Ignore disconnect events while connecting
        handleDisconnectEvents = False

        'Check that the firmware path is valid
        If Not isFirmwarePathValid(FirmwarePath) Then
            Throw New Exception("ERROR: Must set firmware path before connecting")
        End If

        'Enumerate the FX3 board
        FX3Board = EnumerateFX3(5000)

        'If the board is not at the bootloader try and reset
        If DebugEnabled = False Then
            If Not FX3Board.FriendlyName = "Cypress FX3 USB BootLoader Device" Then
                'Send reset command to allow firmware to be reprogrammed
                Disconnect()
                'Re-enumerate the board after the reset command
                FX3Board = EnumerateFX3(5000)
            End If
        End If

        'If the connection is not super speed or high speed throw an exception
        If Not (FX3Board.bHighSpeed Or FX3Board.bSuperSpeed) Then
            Throw New Exception("ERROR: This application requires USB 2.0 connection or better")
        End If

        'Program the FX3 board
        If DebugEnabled = False Then
            ProgramSDRAM(FirmwarePath, False)
        End If

        'Reenumerate the board after programming
        FX3Board = EnumerateFX3(5000)

        'Check that the connection speed is adequate
        CheckConnectionSpeed()

        'Setup endpoints
        EnumerateEndpoints()

        'Check that endpoints are properly enumerated
        If Not CheckEndpointStatus() Then
            m_FX3Connected = False
            m_status = "ERROR: Unable to enumerate endpoints"
            Throw New Exception("ERROR: Unable to configure endpoints")
        End If

        'Make sure that the board SPI parameters match current setting
        WriteBoardSpiParameters()

        'Now that the board is programmed handle disconnect events
        handleDisconnectEvents = True

    End Sub

    ''' <summary>
    ''' This function sends a reset command to the FX3 board, or does nothing if no board is connected
    ''' </summary>
    Public Sub Disconnect()

        Dim buf(3) As Byte
        Dim resetComplete As Boolean

        'Set the connection status
        m_FX3Connected = False

        'Make sure board is enumerated
        If FX3Board Is Nothing Then
            FX3Board = EnumerateFX3(5000)
        End If

        'Exit if the FX3 is not connected
        If FX3Board.FriendlyName = "Cypress FX3 USB BootLoader Device" Then
            Exit Sub
        End If

        'Try and send vendor command to disconnect
        ConfigureControlEndpoint(&HB1, True)
        resetComplete = XferControlData(buf, 4, 3000)
        If resetComplete Then
            m_status = "FX3 Successfully Reset"
        Else
            m_status = "ERROR: Unable to communicate with FX3"
            Throw New Exception(m_status)
        End If

        'Re-enumerate the board
        FX3Board = EnumerateFX3(5000)

        'Check that the bootloader is running
        If Not FX3Board.IsBootLoaderRunning() Then
            Throw New Exception("ERROR: Boot loader failed to launch after disconnect")
        End If

        'Set default values for the interface
        SetDefaultValues(m_sensorType)

    End Sub

