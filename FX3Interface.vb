    ''' <summary>
    ''' Loads the firmware image at the specified file path into the FX3 RAM
    ''' </summary>
    ''' <param name="FileName">The path to the FX3 firmware (.img)</param>
    ''' <param name="Reboot">Option to power cycle board</param>
    Public Sub ProgramSDRAM(ByVal FileName As String, ByVal Reboot As Boolean)

        'Make sure the file provided is valid
        FirmwarePath = FileName

        'Set the connection status to false initially
        m_FX3Connected = False

        'Try and reset the board (does nothing if already reset)
        Disconnect()

        'Firmware flash success
        Dim flashSuccess As FX3_FWDWNLOAD_ERROR_CODE

        'Attempt to program the board
        Try
            flashSuccess = FX3Board.DownloadFw(FirmwarePath, FX3_FWDWNLOAD_MEDIA_TYPE.RAM)
        Catch ex As Exception
            m_status = "ERROR: Exception occurred - " + ex.Message
            Throw New Exception(m_status)
        End Try

        'If the firmware programming function failed
        If Not flashSuccess = FX3_FWDWNLOAD_ERROR_CODE.SUCCESS Then
            m_status = "ERROR Writing SDRAM: " + flashSuccess.ToString()
            Throw New Exception(m_status)
        Else
            m_FX3Connected = True
            m_status = "FX3 Connected"
        End If

    End Sub

    ''' <summary>
    ''' Function which checks if the FX3 is connected and programmed
    ''' </summary>
    ''' <returns>A boolean indicating if the board is programmed</returns>
    Public Function FX3CodeRunning() As Boolean

        Dim boardConnected As Boolean = True
        Dim firmwareString As String = ""

        'Return false if the board hasn't been connected yet
        If Not m_FX3Connected Then
            Return False
        End If

        Try
            firmwareString = FX3Board.FriendlyName
        Catch ex As Exception
            firmwareString = ""
            Return False
        End Try

        'Get the firmware ID from the board
        firmwareString = GetFirmwareID()

        'If the firmware string doesn't contain FX3
        If firmwareString.IndexOf("FX3") = -1 Then
            boardConnected = False
            m_FX3Connected = False
            m_status = "ERROR: Board not responding to requests"
        End If

        Return boardConnected

    End Function

    ''' <summary>
    ''' The path to the firmware .img file. Needs to be set before the FX3 can be programmed
    ''' </summary>
    ''' <returns>A string, represeting the path</returns>
    Public Property FirmwarePath As String
        Get
