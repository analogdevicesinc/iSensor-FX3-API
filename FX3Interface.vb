    ''' <summary>
    ''' Enumerates one connected FX3 device
    ''' </summary>
    ''' <param name="Timeout">The timeout in ms before the enumerate process fails, if no FX3 boards are found</param>
    ''' <returns>The device found</returns>
    Private Function EnumerateFX3(ByVal Timeout As Integer) As CyFX3Device

        Dim returnDevice As CyFX3Device = Nothing
        Dim timeoutStopwatch As New Stopwatch
        Dim boardFound As Boolean = False
        Dim lastException As Exception = Nothing

        'Loop until timeout expires or FX3 board is found
        timeoutStopwatch.Start()
        While (timeoutStopwatch.ElapsedMilliseconds() < Timeout) And (Not boardFound)
            Try
                'Dispose of old USB list
                If Not IsNothing(USBList) Then
                    USBList.Dispose()
                End If

                'Generate list of all USB devices connected
                USBList = New USBDeviceList(CyConst.DEVICES_CYUSB)

                'Check that devices are detected
                If USBList.Count = 0 Then
                    Throw New Exception("ERROR: EnumerateFX3 failed - No Cypress Devices Connected")
                End If

                'Find the board by friendly name
                For i As Integer = 0 To USBList.Count - 1
                    returnDevice = USBList(i)
                    If Not returnDevice.FriendlyName.IndexOf("FX3") = -1 Then
                        boardFound = True
                        Exit For
                    End If
                Next

                'If there is no FX3 board in the list throw an exception
                If Not boardFound Then
                    Throw New Exception("ERROR: EnumerateFX3 failed - No FX3 Board Connected")
                End If

            Catch ex As Exception
                boardFound = False
                'Save the last exception
                lastException = ex
                'Sleep for 500ms
                Thread.Sleep(500)
            End Try

        End While
        'reset the timer
        timeoutStopwatch.Reset()

        'throw exception if board not found
        If Not boardFound Then
            m_FX3Connected = False
            m_status = lastException.Message
            Throw lastException
        End If

        Return returnDevice

    End Function

    ''' <summary>
    ''' Checks to see if a provided firmware path is valid. Throws exception if it is not.
    ''' </summary>
    ''' <param name="path">The firmware path to check</param>
    ''' <returns>A boolean indicating if the firmware path is valid</returns>
    Private Function isFirmwarePathValid(ByRef path As String) As Boolean
        Dim validPath As Boolean = True
        'Always return true in debugging mode
        If DebugEnabled Then
            Return True
        End If
        Try
            'Check file path length
            If Not path.Length > 4 Then
                Throw New Exception("ERROR: Firmware path too short")
            End If
            'Check that it is a .img file
            If Not path.Substring(path.Length - 4, 4) = ".img" Then
                Throw New Exception("ERROR: Firmware must be a .img file")
            End If
            'Check that the file exists
            If Not File.Exists(path) Then
                Throw New Exception("ERROR: Firmware file does not exist")
            End If
        Catch ex As Exception
            validPath = False
            'Pass the exception up
            Throw ex
        End Try

        Return validPath
    End Function

    ''' <summary>
    ''' Performs a data transfer on the control endpoint with a check to see if the transaction times out
    ''' </summary>
    ''' <param name="buf">The buffer to transfer</param>
    ''' <param name="numBytes">The number of bytes to transfer</param>
    ''' <param name="timeout">The timeout time (in milliseconds)</param>
    ''' <returns>Returns a boolean indicating if the transfer timed out or not</returns>
    Private Function XferControlData(ByRef buf As Byte(), ByVal numBytes As Integer, ByVal timeout As Integer) As Boolean

        Dim startTime As New Stopwatch
        Dim validTransfer As Boolean = True

        'Block control endpoint transfers while streaming (except cancel)
        If StreamThreadRunning And Not (FX3ControlEndPt.ReqCode = &HD0) Then
            Return False
        End If

        'Perform transfer
        startTime.Start()
        validTransfer = FX3ControlEndPt.XferData(buf, numBytes)
        startTime.Stop()

        'Check transfer status
        If Not validTransfer Then
            Return False
        End If

        'Check and see if timeout expired
        If startTime.ElapsedMilliseconds() > timeout Then
            Return False
        Else
            Return True
        End If

    End Function

    ''' <summary>
